type User {
    id: ID!
    ownerName: String!
    email: String!
    avatar: String!
}

type UserPreferences {
    id: ID!
    ownerName: String!
    preferredLeagueId: String
    isAdmin: Boolean
    leagues: [League!]!
}

type UserRoles {
    id: ID!
    userId: ID!
    role: String!
}

#Mutations and Inputs
input NewUser {
    ownerName: String!
    email: String!
    avatar: String!
}